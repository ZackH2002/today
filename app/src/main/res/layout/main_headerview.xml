<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <TextView
        android:id="@+id/main_header_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="3dp"
        android:text="星期四"/>
    <TextView
        android:id="@+id/main_header_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="80sp"
        android:text="27"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/main_header_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="周三"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/headerbg">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/main_header_text_constellation"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:text="金牛座"
               android:textStyle="bold"
               android:textSize="26sp"
               android:textColor="@color/gray"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="速配星座"
               android:textSize="26sp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_marginStart="20dp"/>
           <TextView
               android:id="@+id/main_header_text_QFirend"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="双鱼座"
               android:layout_marginStart="20dp"
               android:textStyle="bold"
               android:textColor="@color/gray"
               android:textSize="26sp"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸运颜色:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/main_header_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浅紫色"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/HealthScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="健康指数:"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/main_header_text_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/HealthScore"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/LoveScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱情指数:"
                android:layout_toEndOf="@id/main_header_text_health"
                android:layout_marginStart="60dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/Love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:layout_toRightOf="@id/LoveScore"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/WorkScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="工作指数:"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/main_header_text_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/WorkScore"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/main_header_text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="财运指数:"
                android:layout_toEndOf="@id/main_header_text_work"
                android:layout_marginStart="60dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:layout_toRightOf="@id/main_header_text_money"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/mian_header_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/summary"
            android:textStyle="bold"
            android:layout_margin="10dp"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="那年今日"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"/>


</LinearLayout>